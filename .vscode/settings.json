{
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "scss",
    "sass",
    "stylus",
    "vue"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "prettier.jsxSingleQuote": true,
  "prettier.semi": false
}
